FROM postgres:16-alpine

ARG ENV_POSTGRES_USER

ARG ENV_POSTGRES_PASSWORD

ARG ENV_POSTGRES_DB

ARG ENV_POSTGRES_HOST

ENV POSTGRES_USER=${ENV_POSTGRES_USER}

ENV POSTGRES_PASSWORD=${ENV_POSTGRES_PASSWORD}

ENV POSTGRES_DB=${ENV_POSTGRES_DB}    

ENV POSTGRES_HOST=${ENV_POSTGRES_HOST}    

EXPOSE 5432